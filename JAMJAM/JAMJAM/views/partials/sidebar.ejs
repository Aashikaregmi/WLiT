<% const isAdmin = true; %>

<style>
  /* Sidebar base */
  .sidebar {
    position: fixed;
    top: 60px; /* navbar height */
    left: 0;
    width: 220px;
    height: 100%;
    background-color: #002B5C;
    color: white;
    padding: 20px;
    font-family: 'Poppins', sans-serif;
    box-shadow: 2px 0 10px rgba(0,0,0,0.1);
    overflow-y: auto;
    transition: transform 0.3s ease;
    z-index: 1000;
  }

  .sidebar.closed {
    transform: translateX(-100%);
  }

  .sidebar h2 {
    font-size: 1.5rem;
    margin-bottom: 20px;
    font-weight: 700;
    border-bottom: 2px solid #FBCE26;
    padding-bottom: 8px;
    color: aliceblue;
  }

  .sidebar nav a {
    display: block;
    text-decoration: none;
    color: white;
    padding: 12px 16px;
    margin-bottom: 10px;
    border-radius: 8px;
    transition: background 0.3s, padding-left 0.3s;
    font-weight: 500;
  }

  .sidebar nav a:hover,
  .sidebar nav a.active {
    background-color: #FBCE26;
    color: #002B5C;
    padding-left: 24px;
  }

  main.content-shift {
    margin-left: 220px;
    transition: margin-left 0.3s ease;
  }

  #sidebar-toggle-btn {
    display: none;
    position: fixed;
    top: 15px;
    left: 15px;
    background-color: #FBCE26;
    border: none;
    color: #002B5C;
    font-size: 1.5rem;
    padding: 8px 14px;
    border-radius: 8px;
    cursor: pointer;
    z-index: 1100;
  }

  @media (max-width: 768px) {
    .sidebar {
      width: 100%;
      height: 100vh;
      top: 0;
      padding-top: 60px;
    }
    main.content-shift {
      margin-left: 0;
    }
    #sidebar-toggle-btn {
      display: block;
    }
  }
</style>

<button id="sidebar-toggle-btn" aria-label="Toggle Sidebar">â˜°</button>

<aside id="sidebar" class="sidebar closed" role="navigation" aria-label="Sidebar menu">
  <h2>ADMIN</h2>
  <nav>
    <a href="/buses" class="<%= currentUrl.includes('/buses') && !currentUrl.includes('/add') && !currentUrl.includes('/edit') ? 'active' : '' %>">Show Buses</a>
    <a href="/buses/add" class="<%= currentUrl.includes('/buses/add') ? 'active' : '' %>">Add Buses</a>
  </nav>
</aside>

<script>
  const sidebar = document.getElementById('sidebar');
  const toggleBtn = document.getElementById('sidebar-toggle-btn');
  const mainContent = document.querySelector('main');

  function toggleSidebar() {
    sidebar.classList.toggle('closed');
    if (!sidebar.classList.contains('closed') && window.innerWidth > 768) {
      mainContent.classList.add('content-shift');
    } else {
      mainContent.classList.remove('content-shift');
    }
  }

  toggleBtn.addEventListener('click', toggleSidebar);

  function handleResize() {
    if (window.innerWidth > 768) {
      sidebar.classList.remove('closed');
      mainContent.classList.add('content-shift');
    } else {
      sidebar.classList.add('closed');
      mainContent.classList.remove('content-shift');
    }
  }

  window.addEventListener('resize', handleResize);
  window.addEventListener('DOMContentLoaded', handleResize);
</script>


