<% const isAdmin = ['/buses', '/buses/add', '/buses/edit'].some(path => currentUrl.includes(path)); %>

<style>
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 20px;
    background-color: #002B5C;
    font-family: 'Poppins', sans-serif;
  }

  .navbar-brand {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    text-decoration: none;
  }

  .logo {
    height: 40px;
    width: auto;
    object-fit: contain;
  }

  .nav-btn {
    color: white;
    font-weight: 600;
    text-decoration: none;
    padding: 10px 20px;
    border-radius: 25px;
    transition: background 0.3s;
  }

  .logout-btn {
    background-color: #E74C3C;
  }

  .logout-btn:hover {
    background-color: #C0392B;
  }

  .signup-btn {
    background-color: #0056B3;
  }

  .signup-btn:hover {
    background-color: #003F80;
  }
</style>

<nav class="navbar">
  <a href="/" class="navbar-brand">
    <img src="/images/logo1.png" alt="JAMJAM Logo" class="logo" />
  </a>

  <% if (isAdmin) { %>
    <a href="/logout" class="nav-btn logout-btn">Log Out</a>
  <% } else { %>
    <a href="/signup" class="nav-btn signup-btn">Sign Up</a>
  <% } %>
</nav>


