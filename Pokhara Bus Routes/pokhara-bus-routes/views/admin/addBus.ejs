<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Add Bus </title>
  <link rel="stylesheet" href="/stylesheets/style.css" />

</head>
<body>
  <nav class="navbar">
    <div class="nav-left">
      <img src="/images/logo.png" alt="Logo" class="logo" />
      <b>Pokhara Bus Routes</b>
    </div>
    <div class="nav-center">
      <h1>Admin Panel</h1>
    </div>
    <div class="nav-right">
      <button class="btn btn-danger">LogOut</button>
    </div>
  </nav>

  <div class="container">
    <aside class="sidebar">
      <ul>
        <li><a href="/buses">Show Buses</a></li>
        <li class="active"><a href="/buses/add">Add Buses</a></li>
      </ul>
    </aside>

    <main class="main-content">
      <section class="edit-section" style="max-width: 400px; margin: auto;">
        <h2 id="edit">Add Bus</h2>

        <form action="/buses/save" method="POST">
          <label for="busNumber">Bus No:</label>
          <input type="text" id="busNumber" name="busNumber" required min="1" />

          <label for="pickUp">Pickup Point:</label>
          <input type="text" id="pickUp" name="pickUp" required />

          <label for="destination">Destination:</label>
          <input type="text" id="destination" name="destination" required />

          <label for="departureHour">Departure Time:</label>
<div style="display: flex; gap: 0.5rem;">
  <select id="departureHour" name="departureHour" required>
    <% for (let h = 1; h <= 12; h++) { %>
      <option value="<%= h %>"><%= h.toString().padStart(2, '0') %></option>
    <% } %>
  </select>
  <span>:</span>
  <select id="departureMinute" name="departureMinute" required>
    <% for (let m = 0; m < 60; m += 5) { %>
      <option value="<%= m %>"><%= m.toString().padStart(2, '0') %></option>
    <% } %>
  </select>
  <select id="ampm" name="ampm" required>
    <option value="AM">AM</option>
    <option value="PM">PM</option>
  </select>
</div>


          <label for="fare">Bus Fare:</label>
          <input type="number" id="fare" name="fare" required min ="0" />

          <input type="submit" value="Save" class="btn btn-primary" min="0" />
        </form>
      </section>
    </main>
  </div>
</body>
</html>
